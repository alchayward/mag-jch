%%% Generate alpha_kappa plots %%%

delta = 0;
mu = -0.78; %tip of the first mott lobe
opts = struct();
opts.mod_psi = 0.6;
opts.max_iter = 100000;
alpha_range = [0,0.5]; % Only do half the range, because otherhalf is equal
alpha_points = 100;
alpha_p_list = linspace(alpha_range(1),alpha_range(2),alpha_points);

kappa_range = [0,0.1];
kappa_points = 100;
kappa_list = linspace(kappa_range(1),kappa_range(2),kappa_points);


lattice_dims = [10,10];
psi = alpha_kappa_vs_psi(alpha_p_list,kappa_list,lattice_dims,delta,mu)

[M0, k_trans, k_max] = mu_kappa_vs_psi(mu_list,kappa_list,...
            alpha,lattice_dim,delta,opts);
save('./saves/mu_kappa_psi_0','M0');
figure(1)
plot_mu_kappa_vs_psi(M0,mu_list,kappa_list,k_trans,k_max)